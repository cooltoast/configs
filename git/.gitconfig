[alias]
        a  = add
        bl = blame
        br = branch
        ch = checkout
        cp = cherry-pick
        cl = clone
        c  = commit
        d  = diff
        dc = diff --cached
        dt = difftool
        f  = fetch
        g  = grep
        i  = init
        l  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        ls = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --stat
        m  = merge
        pl = pull
        ps = push
        rb = rebase
        re = remote
        rf = reflog
        rs = reset
        sh = show
        s  = status
        st = stash

[color]
        ui = auto

